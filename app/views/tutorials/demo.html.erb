<%= form_for :anything, url: "tutorials/demo_explained" do |f| %>
  <div class="m-t" role="form" >

    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h3>Start Demo </h3>
        <h5 style="color:red;"><%=@message%></h5>
          <div class="ibox-tools">
              <a class="collapse-link">
                  <i class="fa fa-chevron-up"></i>
              </a>
              <a class="close-link">
                  <i class="fa fa-times"></i>
              </a>
          </div>
      </div>
      <div class="ibox-content">
          <div class="field">
            <div class="form-group"><label class="col-sm-2 control-label">Name</label>
              <div class="row">
                <div class="col-sm-6">
                  <%= f.text_field :name, class:"form-control" %>
                  <span class="help-block m-b-none">Enter Your Name</span>
                  <br>
                </div>
              </div>
            </div>
          </div>




          <div class="form-group">
            <label class="col-sm-2 control-label">Enter Your Phone Number</label>
              <div class="row">
                <div class="col-sm-4">
                    <%= f.text_field :telephone, class:"form-control", :data => {:mask=> '(999) 999-9999'} %>
                    <span class="help-block">(123) 456-7890</span>
                    <br>
                </div>
              </div>
          </div>



          <div class="actions">
            <div class="row">

              <div class="col-sm-3">
              </div>
              <div class="col-sm-6">
                <%= f.submit "Start Demo", class: "btn btn-lg btn-success full-width block " %>
              </div>
              <div class="col-sm-3">
              </div>
            </div>
          </div>

      </div>
    </div>

  </div>

<% end %>
