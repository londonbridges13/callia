    <div class="col-lg-8">
        <h2>Calendar</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'dashboard', :action => 'index' %>">Dashboard</a>
        </li>
        <li class="active">
            <strong>Schedule</strong>
        </li>
    </ol>
</div>
