            <ul class="list-group clear-list m-t">
                <li class="list-group-item fist-item">
                    <span class="pull-right">
                        09:00 pm
                    </span>
                    <span class="label label-success">1</span> <%=r.reminder%>
                </li>
            </ul>
        <%end%>
      <%end%>
    </div>
