<%= form_for(@office) do |f| %>
  <div class="m-t" role="form" >
    <% if @office.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@office.errors.count, "error") %> prohibited this office from being saved:</h2>

        <ul>
        <% @office.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="ibox float-e-margins">
      <div class="ibox-title">
          <h5>Create Office </h5>
          <div class="ibox-tools">
              <a class="collapse-link">
                  <i class="fa fa-chevron-up"></i>
              </a>
              <a class="close-link">
                  <i class="fa fa-times"></i>
              </a>
          </div>
      </div>
      <div class="ibox-content">
          <div class="field">
            <div class="form-group"><label class="col-sm-2 control-label">Name</label>
              <div class="row">
                <div class="col-sm-6">
                  <%= f.text_field :name, class:"form-control" %>
                  <span class="help-block m-b-none">Enter the Name of the Office. May even be the name of your Agency</span>
                  <br>
                </div>
              </div>
            </div>
          </div>




          <div class="form-group">
            <label class="col-sm-2 control-label">Phone</label>
              <div class="row">
                <div class="col-sm-4">
                    <%= f.text_field :telephone, class:"form-control", :data => {:mask=> '(999) 999-9999'} %>
                    <span class="help-block">(123) 456-7890   (Optional)</span>
                    <br>
                </div>
              </div>
          </div>

          <%if current_user.caregivers.count > 0%>

            <div class="field">
              <div class="form-group"><label class="col-sm-2 control-label">Select Supervisor</label>
                <div class="row">
                  <div class="col-sm-4">
                    <%= f.collection_select :supervisor_id, current_user.caregivers, :id, :name,
                      {:class => 'prevent_collapse'},:class => "form-control m-b", :include_blank => 'Select' %>
                  </div>
                </div>
              </div>
            </div>

          <%end%>



                    <div class="field row">
                      <div class="col-lg-12">
                        <div class="form-group"><label class="col-sm-2 control-label">Address</label>
                        <div class="col-sm-7">
                          <%= f.text_field :address, class:"form-control" %>
                          <br>
                          <br>
                        </div>
                        </div>
                      </div>

                    </div>


                    <div class="field row">
                      <div class="col-lg-12">
                        <div class="form-group"><label class="col-sm-2 control-label">City</label>
                        <div class="col-sm-6">
                          <%= f.text_field :city, class:"form-control" %>
                          <br>
                        </div>
                        </div>
                      </div>
                    </div>

                    <div class="field row">
                      <div class="col-lg-12">
                      <div class="form-group"><label class="col-md-2 control-label">State</label>
                        <div class="col-md-4">
                            <%= f.collection_select :state, ["Alaska",
                                      "Alabama",
                                      "Arkansas",
                                      "American Samoa",
                                      "Arizona",
                                      "California",
                                      "Colorado",
                                      "Connecticut",
                                      "District of Columbia",
                                      "Delaware",
                                      "Florida",
                                      "Georgia",
                                      "Guam",
                                      "Hawaii",
                                      "Iowa",
                                      "Idaho",
                                      "Illinois",
                                      "Indiana",
                                      "Kansas",
                                      "Kentucky",
                                      "Louisiana",
                                      "Massachusetts",
                                      "Maryland",
                                      "Maine",
                                      "Michigan",
                                      "Minnesota",
                                      "Missouri",
                                      "Mississippi",
                                      "Montana",
                                      "North Carolina",
                                      " North Dakota",
                                      "Nebraska",
                                      "New Hampshire",
                                      "New Jersey",
                                      "New Mexico",
                                      "Nevada",
                                      "New York",
                                      "Ohio",
                                      "Oklahoma",
                                      "Oregon",
                                      "Pennsylvania",
                                      "Puerto Rico",
                                      "Rhode Island",
                                      "South Carolina",
                                      "South Dakota",
                                      "Tennessee",
                                      "Texas",
                                      "Utah",
                                      "Virginia",
                                      "Virgin Islands",
                                      "Vermont",
                                      "Washington",
                                      "Wisconsin",
                                      "West Virginia",
                                      "Wyoming"], :to_s, :to_s,
                                      {:class => 'prevent_collapse'},:class => "form-control m-b" %>
                                      <br><br><br><br>
                          </div>
                        </div>
                      </div>
                    </div>




          <div class="actions">
              <%= f.submit nil, class: "btn btn-primary block full-width m-b" %>
          </div>

          <div class="actions">
            <%if @office.id%>
                <%= link_to "Delete Office", office_path(@office), :method => :delete,  data: {confirm: 'Are you sure?' },
                  :class => "btn btn-danger block half-width m-b btn-outline" %>
            <%end%>
          </div>
      </div>
    </div>

  </div>

<% end %>
