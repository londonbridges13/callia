<p id="notice"><%= notice %></p>

<h1>Service Questions</h1>

<div class="form-group row">
  <div class="col-sm-5 pull-left">
    <%= link_to 'Add Service', new_service_path, class: "btn btn-primary block full-width m-b" %>
  </div>
</div>

<% @services.each do |service| %>
  <%= form_for [service] do |f| %>


      <div class="field">
          <br>
          <div class="form-group row">
          <div class="col-sm-6">
            <%= f.text_area :service, class:"form-control" %>
            <span class="help-block m-b-none">This is what your employee hears in a phone call</span>
          </div>
          <div class="col-sm-2">
            <div class="actions">
              <%= f.submit nil, class: "btn btn-success block full-width m-b pull-right" %>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="actions">
              <%= link_to "Delete", service_path(f), :method => :delete,  data: {confirm: 'Are you sure?' },
                :class => "btn btn-danger full-width m-b btn-outline pull-left" %>
            </div>
          </div>
          </div>
          <br>
      </div>


  <% end %>
<% end %>
