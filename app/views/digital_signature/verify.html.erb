<%= form_for :anything, url: "digital_signature/timesheet" do |f| %>
  <div class="m-t" role="form" >

    <div class="ibox float-e-margins">
      <div class="ibox-title">
          <h5>We've sent you a text. </h5>
          <div class="ibox-tools">
              <a class="collapse-link">
                  <i class="fa fa-chevron-up"></i>
              </a>
              <a class="close-link">
                  <i class="fa fa-times"></i>
              </a>
          </div>
      </div>
      <div class="ibox-content">

          <div class="form-group">
            <label class="col-sm-2 control-label">Please Enter Verification Code</label>
              <div class="row">
                <div class="col-sm-4">
                    <%= f.text_field :code, class:"form-control" %>
                    <span class="help-block"> </span>
                    <br>
                    <br>
                </div>
              </div>
          </div>

          <div class="row">
            <input type="hidden" name="verify" value="<%=@code%>">
            <input type="hidden" name="id" value="<%=@id%>">
                <br>
          </div>


          <div class="actions">
              <%= f.submit "Verify", class: "btn btn-primary block full-width m-b" %>
          </div>

      </div>
    </div>

  </div>

<% end %>
