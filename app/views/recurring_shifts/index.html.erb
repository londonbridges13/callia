<p id="notice"><%= notice %></p>

<h1>Listing Recurring Shifts</h1>

<table>
  <thead>
    <tr>
      <th>Frequency</th>
      <th>Time span</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recurring_shifts.each do |recurring_shift| %>
      <tr>
        <td><%= recurring_shift.frequency %></td>
        <td><%= recurring_shift.time_span %></td>
        <td><%= link_to 'Show', recurring_shift %></td>
        <td><%= link_to 'Edit', edit_recurring_shift_path(recurring_shift) %></td>
        <td><%= link_to 'Destroy', recurring_shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

